{
	"name": "llimo.app",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"type": "module",
	"scripts": {
		"build": "tsc",
		"clean:modules": "rm -rf node_modules/",
		"test": "node --test --test-timeout=3333 'src/**/*.test.js'",
		"test:all": "npm run test && npm run build",
		"test:chat": "node bin/llimo-chat.js --test=chat-dir",
		"test:coverage": "node --experimental-test-coverage --test-coverage-include=\"src/**/*.js\" --test-coverage-exclude=\"src/**/*.test.js\" --test \"src/**/*.test.js\"",
		"test:reproduce": "node bin/llimo-chat.js --test-dir=/path/to/chat/archive --input test-prompt.md",
		"prepare": "husky"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"packageManager": "pnpm@10.11.0",
	"devDependencies": {
		"husky": "^9.1.7",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@ai-sdk/cerebras": "^1.0.32",
		"@ai-sdk/huggingface": "^0.0.10",
		"@ai-sdk/openai": "^2.0.86",
		"@openrouter/ai-sdk-provider": "^1.4.0",
		"ai": "^5.0.107",
		"micromatch": "^4.0.8"
	},
	"bin": {
		"llimo-chat": "bin/llimo-chat.js"
	}
}
